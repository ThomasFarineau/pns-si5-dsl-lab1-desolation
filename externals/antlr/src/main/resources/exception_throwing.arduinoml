application exceptionThrowing

# Declaring bricks
sensor buttonOne: 8
sensor buttonTwo: 9
actuator led: 12

# Declaring states

alarmBlinkOn {
    led <= HIGH
    buttonOne is LOW => buttonTwoPressed
    buttonTwo is LOW => buttonOnePressed
    delay 1000 ms => alarmBlinkOff
}

alarmBlinkOff {
    led <= LOW
    buttonOne is LOW => buttonTwoPressed
    buttonTwo is LOW => buttonOnePressed
    delay 1000 ms => alarmBlinkOff
}

buttonTwoPressed {
    led <= LOW
    buttonOne is HIGH => alarmBlinkOn
    buttonTwo is LOW => off
}

buttonOnePressed {
    led <= LOW
    buttonOne is LOW => off
    buttonTwo is HIGH => alarmBlinkOn
}

-> off {
    led <= LOW
    buttonOne is HIGH => buttonOnePressed
    buttonTwo is HIGH => buttonTwoPressed
}
