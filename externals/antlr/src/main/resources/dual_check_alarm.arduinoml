application dualCheckAlarm

# Declaring bricks
sensor button1: 9
sensor button2: 10
actuator buzzer: 11

# Declaring states
on {
    buzzer <= HIGH
    button1 is LOW => button2Pressed
    button2 is LOW => button1Pressed
}

button1Pressed {
    buzzer <= LOW
    button2 is HIGH => on
    button1 is LOW => off
}

button2Pressed {
    buzzer <= LOW
    button1 is HIGH => on
    button2 is LOW => off
}

-> off {
    buzzer <= LOW
    button1 is HIGH => button1Pressed
    button2 is HIGH => button2Pressed
}
